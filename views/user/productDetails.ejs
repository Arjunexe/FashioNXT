<script>

    function addToCart(proId) {

        $.ajax({
            url: '/addToCart/' + proId,
            method: 'POST',

            success: (response) => {
                document.getElementById("addc").style.display="none"
                document.getElementById("addv").style.display=""
                if (response.status) {
                    location.reload
                }
            }
        })
    }





    function addToWishList(proId) {
    $.ajax({
      url: '/add-to-wishlist',
      method: 'POST',
      data: {
        proId: proId
      },
      success: (response) => {
        if (response.status) {
          // Product added to Wishlist successfully
          Swal.fire({
            icon: 'success',
            title: 'Product added to Wishlist!',
            showConfirmButton: false,
            timer: 3000
          });
          // Reload page after 3 seconds
          setTimeout(function() {
            location.reload();
          }, 3000);

        } else {
          // Error adding product to Wishlist
          Swal.fire({
            icon: 'error',
            title: 'Product already exist in Wishlist',
            timer: 3000
          });

        }
      }
    })
  }



</script>
